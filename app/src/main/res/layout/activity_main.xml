<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    >

    <ImageButton
        android:id="@+id/ff_icon"
        android:layout_above="@+id/browse_button"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/flashforwardthreeboxesgray"
        android:scaleType="fitCenter"
        android:background="#FFFFFF"
    />

    <Button
        android:id="@+id/browse_button"
        android:layout_above="@+id/team_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:textAllCaps="false"
        android:text="Browse"
        android:textSize="@dimen/button_text_size"
        android:gravity="center"
        android:paddingLeft="20px"
        />

    <Button
        android:id="@+id/team_button"
        android:layout_above="@+id/outfit_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:textAllCaps="false"
        android:text="Select Team"
        android:textSize="@dimen/button_text_size"
        android:gravity="center"
        android:paddingLeft="20px"
        />

    <Button
        android:id="@+id/outfit_button"
        android:layout_above="@+id/flash_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFFFFF"
        android:text="Select Outfit"
        android:textAllCaps="false"
        android:textSize="@dimen/button_text_size"
        android:gravity="center"
        android:paddingLeft="20px"
    />

    <Button
        android:id="@+id/flash_button"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1392DC"
        android:textAllCaps="false"
        android:text="Flash"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="@dimen/button_text_size"
        android:onClick="flash_handler"
        />



</RelativeLayout>
